{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true,
		"paths": {
			"$lib/*": ["src/lib/*"],
			"$components/*": ["src/components/*"],
			"$stores/*": ["src/stores/*"],
			"$utils/*": ["src/utils/*"],
			"$styles/*": ["src/styles/*"],
			"$routes/*": ["src/routes/*"],
			"$assets/*": ["src/assets/*"],
			"@simple-blog-builder/core": ["@simple-blog-builder/core"]
		}
	}
}
